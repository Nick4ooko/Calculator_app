<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="horizontal">


   <Button
       android:layout_width="70dp"
       android:layout_height="wrap_content"
       android:id="@+id/bt_1_id"
       android:text="1"
       android:textStyle="bold"
       android:layout_marginTop="300dp"
       android:layout_marginLeft="20dp"
       android:padding="10dp"
       android:background="#808382"
       android:textColor="#ffffff"/>

    <Button
        android:id="@+id/bt_2_id"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/bt_1_id"
        android:layout_marginStart="20dp"
        android:layout_marginTop="300dp"
        android:background="#808382"
        android:padding="10dp"
        android:text="2"
        android:textColor="#ffffff"
        android:textStyle="bold" />


    <Button
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/bt_3_id"
        android:text="3"
        android:textStyle="bold"
        android:layout_marginTop="300dp"

        android:layout_marginStart="20dp"
        android:padding="10dp"
        android:background="#808382"
        android:textColor="#ffffff"
        android:layout_toRightOf="@id/bt_2_id"/>

    <Button
    android:layout_width="70dp"
    android:layout_height="wrap_content"
    android:id="@+id/bt_4_id"
    android:text="4"
    android:layout_below="@id/bt_1_id"
    android:textStyle="bold"
    android:layout_marginTop="30dp"
    android:layout_marginLeft="20dp"
    android:padding="10dp"
    android:background="#808382"
    android:textColor="#ffffff"/>

    <Button
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/bt_5_id"
        android:text="5"
        android:layout_below="@id/bt_2_id"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/bt_4_id"
        android:layout_marginStart="20dp"
        android:padding="10dp"
        android:background="#808382"
        android:textColor="#ffffff"/>



    <Button
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/bt_6_id"
        android:text="6"
        android:layout_below="@id/bt_2_id"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/bt_5_id"
        android:layout_marginStart="20dp"
        android:padding="10dp"
        android:background="#808382"
        android:textColor="#ffffff"/>



    <Button
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/bt_7_id"
        android:text="7"
        android:layout_below="@id/bt_4_id"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:padding="10dp"
        android:background="#808382"
        android:textColor="#ffffff"/>



    <Button
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/bt_8_id"
        android:text="8"
        android:layout_below="@id/bt_5_id"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/bt_4_id"
        android:layout_marginStart="20dp"
        android:padding="10dp"
        android:background="#808382"
        android:textColor="#ffffff"/>



    <Button
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/bt_9_id"
        android:text="9"
        android:layout_below="@id/bt_6_id"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/bt_8_id"
        android:layout_marginStart="20dp"
        android:padding="10dp"
        android:background="#808382"
        android:textColor="#ffffff"/>


 <Button
     android:id="@+id/bt_zero_id"
     android:layout_width="70dp"
     android:layout_height="wrap_content"
     android:layout_below="@id/bt_8_id"
     android:layout_marginStart="20dp"
     android:layout_marginLeft="22dp"
     android:layout_marginTop="30dp"
     android:background="#808382"
     android:layout_toRightOf="@id/bt_7_id"
     android:padding="10dp"
     android:text="0"
     android:textColor="#ffffff"
     android:textStyle="bold" />

 <Button
     android:layout_width="70dp"
     android:layout_height="80dp"
     android:id="@+id/bt_equal_id"
     android:text="="
     android:layout_below="@id/bt_subtraction_id"
     android:textStyle="bold"
     android:layout_marginTop="30dp"
     android:layout_toRightOf="@id/bt_9_id"
     android:layout_marginStart="20dp"
     android:padding="10dp"
     android:background="#808382"
     android:textColor="#ffffff"/>

 <Button
     android:layout_width="70dp"
     android:layout_height="wrap_content"
     android:id="@+id/bt_point_id"
     android:text="."
     android:textStyle="bold"
     android:layout_marginTop="230dp"
     android:layout_marginBottom="30dp"
     android:layout_marginStart="20dp"
     android:padding="10dp"
     android:background="#808382"
     android:textColor="#ffffff"/>


 <Button
     android:layout_width="70dp"
     android:layout_height="wrap_content"
     android:id="@+id/bt_cancel_id"
     android:text="C"
     android:textStyle="bold"
     android:layout_toRightOf="@id/bt_point_id"
     android:layout_marginTop="230dp"
     android:layout_marginBottom="30dp"
     android:layout_marginStart="20dp"
     android:padding="10dp"
     android:background="#808382"
     android:textColor="#ffffff"/>

 <Button
     android:layout_width="70dp"
     android:layout_height="wrap_content"
     android:id="@+id/bt_multiplication_id"
     android:text="*"
     android:textStyle="bold"
     android:layout_marginTop="230dp"
     android:layout_toRightOf="@id/bt_cancel_id"
     android:layout_marginBottom="30dp"
     android:layout_marginStart="20dp"
     android:padding="10dp"
     android:background="#808382"
     android:textColor="#ffffff"/>

 <Button
     android:layout_width="60dp"
     android:layout_height="wrap_content"
     android:id="@+id/bt_division_id"
     android:text="/"
     android:textStyle="bold"
     android:layout_marginTop="230dp"
     android:layout_toRightOf="@id/bt_multiplication_id"
     android:layout_marginBottom="30dp"
     android:layout_marginStart="20dp"
     android:padding="10dp"
     android:background="#808382"
     android:textColor="#ffffff"/>

 <Button
     android:layout_width="60dp"
     android:layout_height="wrap_content"
     android:id="@+id/bt_add_id"
     android:text="+"
     android:textStyle="bold"
     android:layout_toRightOf="@id/bt_3_id"
     android:layout_marginTop="300dp"
     android:layout_marginBottom="30dp"
     android:layout_marginStart="20dp"
     android:padding="10dp"
     android:background="#808382"
     android:textColor="#ffffff"/>

 <Button
     android:layout_width="60dp"
     android:layout_height="wrap_content"
     android:id="@+id/bt_subtraction_id"
     android:text="-"
     android:textStyle="bold"
     android:layout_toRightOf="@id/bt_6_id"
     android:layout_below="@id/bt_add_id"
     android:layout_marginStart="20dp"
     android:padding="10dp"
     android:background="#808382"
     android:textColor="#ffffff"/>



































































</RelativeLayout>